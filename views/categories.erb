<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>categories</title>
  </head>
  <body>
  <ul class="nav justify-content-center mb-3 mt-2">
  <li class="nav-item">
    <a class="nav-link" aria-current="page" href="/">Items</a>
  </li>
  <li class="nav-item">
    <a class="nav-link"  style="background-color: #0d6efd; color: white; border-radius: 5px" href="/categories">Categories</a>
  </li>
</ul>
    <div class="container">
    <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-6">
    <h3 style="text-align: center"><%= @tittle%></h3><br>
    <form action="/categories/create" method="POST">
    <label class="form-label">Name</label>
     <input type="text" class="form-control mb-2" id="name" name="name">
    <div class="d-grid gap-2">
  <button class="btn btn-primary mb-2" href="/items/new">Add Category</button>
  </form>
</div>
    <div class="card">
  <div class="card-body">
        <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th style="text-align: center;">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% i = 0 
  categories.each do |cat| %>
   <tr>
      <th scope="row"><%= i += 1 %></th>
      <td><%= cat.name%></td>
      <td style="text-align: center;">
      <form action="/categories/delete" method="POST">
      <div class="d-grid gap-3 d-md-block">
    <button class="btn btn-warning btn-sm" type="button" data-bs-toggle="modal" data-bs-target="#exampleview<%= cat.id%>">Edit</button>
<!--<button class="btn btn-primary btn-sm" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal<%= cat.id%>">Edit</button>-->
  <input type="hidden" class="form-control" id="id" name="id" value="<%= cat.id%>">
  <button class="btn btn-danger btn-sm" type="submit" _value="delete">Delete</button>
  <a class="btn btn-primary btn-sm" type="button" href="/categories/<%= cat.id%>/items">Add Items</a>
  </form>


</div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
  </div>
</div>
</div>
</div>
</div>

<% categories.each do |cat| %>
<div class="modal fade" id="exampleview<%= cat.id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" style="background-color: #0d6efd; color: white;">
        <h5 class="modal-title" id="exampleModalLabel">Edit Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
    <form action="/categories/update" method="POST">
    <input type="hidden" value="PUT" name="_method">
  <label class="form-label mt-2">Name</label>
  <input type="hidden" class="form-control" id="id" name="id" value="<%= cat.id%>">
  <input type="text" class="form-control" id="name" name="name" value="<%= cat.name%>">
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-secondary">Save Changes</button>
      </div>
    </div>
    </form>
  </div>
</div>
<% end %>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
